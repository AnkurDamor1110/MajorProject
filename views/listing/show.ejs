<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
                <h3>Listing Details: </h3>
        </div>
             <div class="card col-6 offset-3 show-card">
                        <img src="<%= listingShow.image %>" class="card-img-top show-img" alt="listing_image">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listingShow.title %></b> <br/>
                                <%= listingShow.description %> <br />
                                &#8377; <%= listingShow.price.toLocaleString("en-IN") %> <br />
                                <%= listingShow.location %> <br />
                                <%= listingShow.country %>
                            </p>
                        </div>
            
                </div>
   
        <br />
        <div class="btns">
            <a href="/listing/<%= listingShow._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>

                <form method="POST" action="/listing/<%= listingShow._id %>?_method=DELETE">
                    <button  class="btn btn-dark offset-5" >Delete</button>
                </form>
        </div>
    </div>
</body>
