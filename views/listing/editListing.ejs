<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listing/<%= listingShow._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input  name="listing[title]" type="text" value="<%= listingShow.title %>" class="form-control" required>   <!-- pass object Listing[title] -->
            <div class="valid-feedback"> Good Title </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea  name="listing[description]" type="text" class="form-control" required><%= listingShow.description %></textarea>
            <div class="invalid-feedback"> Please Enter Short Description </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image Link</label>
            <input name="listing[image] " type="url" value="<%= listingShow.image %>" class="form-control" required>
            <div class="invalid-feedback"> Should be Enter Image URL </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input  name="listing[price]" type="number" value="<%= listingShow.price %>" class="form-control" required>
            <div class="invalid-feedback"> Should be Enter Number </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Location</label>
            <input  name="listing[location]" type="text" value="<%= listingShow.location %>" class="form-control" required>
            <div class="invalid-feedback"> Should be Enter Location </div>
        </div>
    </div>
        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input  name="listing[country]" type="text" value="<%= listingShow.country %>" class="form-control" required>
            <div class="invalid-feedback"> Should be Enter country </div>
        </div>
        
     
        <button class="btn btn-dark add-btn mt-3">EDIT</button>
    </form>
    </div>
</div>
</body>
